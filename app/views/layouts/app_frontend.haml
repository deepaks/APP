!!! strict

%html{ :xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', :lang => 'en' }
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html; charset=UTF-8' }
    %title= h(yield(:title) || "Architectural Portfolio Platform")
    = javascript_include_tag :defaults
    = stylesheet_link_tag "http://yui.yahooapis.com/2.7.0/build/reset/reset-min.css"
    = stylesheet_link_tag 'app_frontend'
    = yield(:head)

  %body
    #site
      #header<>
        = yield :header
      
      #container<>
      
        -#- if show_title?
        -#  %h1
        -#    =h yield(:title)
      
        = yield
      
      #sidebar<>
        = yield :sidebar
      
      .clear
      
      #footer<>
        = yield :footer