!!! strict

%html{ :xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', :lang => 'en' }
  %head
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html; charset=UTF-8' }
    %title= h(yield(:title) || "APP")
    = javascript_include_tag :defaults
    -#= stylesheet_link_tag "http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css"
    -#= stylesheet_link_tag "http://yui.yahooapis.com/2.7.0/build/reset/reset-min.css"
    = stylesheet_link_tag 'admin'
    = stylesheet_link_tag 'firm'
    = yield(:head)

  %body
    
    #container
      = render :partial => "/application/user_nav"
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      - if show_title?
        %h1
          =h yield(:title)
      
      = yield