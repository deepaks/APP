<h1>New service_plan</h1>

<% form_for(@service_plan) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :plan_type %><br />
    <%= f.text_field :plan_type %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :feature_description %><br />
    <%= f.text_area :feature_description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', service_plans_path %>